<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools1="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    xmlns:tools3="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.shv.android.composition.presentation.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_choseLevelFragment"
            app:destination="@id/choseLevelFragment" />
    </fragment>
    <fragment
        android:id="@+id/choseLevelFragment"
        android:name="com.shv.android.composition.presentation.ChoseLevelFragment"
        android:label="ChoseLevelFragment"
        tools1:layout="@layout/fragment_chose_level">
        <action
            android:id="@+id/action_choseLevelFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.shv.android.composition.presentation.GameFragment"
        android:label="GameFragment"
        tools2:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_gameFragment_to_gameFinishedFragment"
            app:destination="@id/gameFinishedFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="level"
            app:argType="com.shv.android.composition.domain.entity.Level" />
    </fragment>
    <fragment
        android:id="@+id/gameFinishedFragment"
        android:name="com.shv.android.composition.presentation.GameFinishedFragment"
        android:label="GameFinishedFragment"
        tools3:layout="@layout/fragment_game_finished">
        <argument
            android:name="gameResult"
            app:argType="com.shv.android.composition.domain.entity.GameResult" />
    </fragment>
</navigation>